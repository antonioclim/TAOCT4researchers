skinparam backgroundColor #1a1a2e
skinparam defaultFontColor #ffffff
skinparam defaultFontName "Segoe UI"

skinparam package {
    BackgroundColor #0f3460
    BorderColor #58a6ff
    FontColor #ffffff
}

skinparam component {
    BackgroundColor #16213e
    BorderColor #58a6ff
    FontColor #ffffff
}

skinparam interface {
    BackgroundColor #3fb950
    FontColor #000000
}

skinparam database {
    BackgroundColor #ffa657
    BorderColor #ffffff
    FontColor #000000
}

skinparam arrow {
    Color #58a6ff
}

title Benchmark Suite Framework Architecture

package "Benchmark Core" {
    component [Timer\n(high-resolution)] as Timer
    component [GC Controller\n(disable during measurement)] as GC
    component [Warmup Manager\n(JIT compilation)] as Warmup
    component [Statistics Engine\n(mean, median, std, IQR)] as Stats
    
    interface "BenchmarkResult" as IBR
}

package "Data Generation" {
    component [Random Data\nGenerator] as RandGen
    component [Sorted Data\nGenerator] as SortGen
    component [Reverse Sorted\nGenerator] as RevGen
    component [Nearly Sorted\nGenerator] as NearGen
}

package "Algorithm Registry" {
    component [Sorting Algorithms] as Sort
    component [Search Algorithms] as Search
    component [Custom Functions] as Custom
}

package "Analysis Tools" {
    component [Complexity Estimator\n(log-log regression)] as Estimator
    component [Speedup Calculator\n(baseline comparison)] as Speedup
    component [Profiler Integration\n(cProfile, line_profiler)] as Profiler
}

package "Export & Reporting" {
    database "CSV Export" as CSV
    database "JSON Export" as JSON
    component [Summary Generator\n(formatted tables)] as Summary
    component [Visualisation\n(matplotlib integration)] as Viz
}

' Connections
Timer --> IBR : produces
GC --> Timer : controls
Warmup --> Timer : prepares

RandGen --> Sort
SortGen --> Sort
RevGen --> Sort
NearGen --> Sort

Sort --> IBR
Search --> IBR
Custom --> IBR

IBR --> Stats : input
Stats --> Estimator
Stats --> Speedup
Stats --> Profiler

Stats --> Summary
Stats --> CSV
Stats --> JSON
Stats --> Viz

note bottom of Timer
    **Timer Precision:**
    • time.perf_counter_ns()
    • Nanosecond resolution
    • Process-specific clock
end note

note bottom of Stats
    **Statistical Measures:**
    • Mean (sensitive to outliers)
    • Median (robust central tendency)
    • Std Dev (variability)
    • IQR (robust spread)
    • CV (relative variability)
end note

note right of Estimator
    **Empirical Estimation:**
    T(n) = c · n^k
    
    log T = log c + k · log n
    
    Linear regression yields k
end note

@enduml
