@startuml resilience_patterns

!theme plain
skinparam backgroundColor #FFFFFF
skinparam rectangleBackgroundColor #F8F9FA
skinparam rectangleBorderColor #6C757D
skinparam arrowColor #0D6EFD

title Resilience Patterns Overview

rectangle "Client Request" as CR

rectangle "Resilience Layer" {
    rectangle "Retry\nwith Backoff" as RB #E8F4F8 {
        note bottom
          Transient failures
          Exponential delay
          Max attempts
        end note
    }
    
    rectangle "Circuit\nBreaker" as CB #FFF3CD {
        note bottom
          Cascading failures
          Fail fast
          Auto recovery
        end note
    }
    
    rectangle "Timeout" as TO #F8D7DA {
        note bottom
          Slow responses
          Resource release
          Bounded wait
        end note
    }
    
    rectangle "Bulkhead" as BH #D4EDDA {
        note bottom
          Isolation
          Limit blast radius
          Resource pools
        end note
    }
}

rectangle "Fallback Strategies" {
    rectangle "Default Value" as DV
    rectangle "Cached Result" as CH
    rectangle "Graceful\nDegradation" as GD
}

rectangle "Service" as SVC

CR --> RB
RB --> CB
CB --> TO
TO --> BH
BH --> SVC

CB .down.> DV : open circuit
TO .down.> CH : timeout
BH .down.> GD : pool exhausted

legend right
  | Pattern | Problem Solved |
  | Retry | Transient failures |
  | Circuit Breaker | Cascading failures |
  | Timeout | Slow responses |
  | Bulkhead | Resource exhaustion |
endlegend

@enduml
