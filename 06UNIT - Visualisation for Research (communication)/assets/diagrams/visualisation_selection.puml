skinparam backgroundColor transparent
skinparam activityBackgroundColor #16213e
skinparam activityBorderColor #58a6ff
skinparam arrowColor #8b949e

title Visualisation Selection Decision Tree

start

:What is your\nprimary goal?;

switch (Goal?)
case (Compare values)
    :How many\ncategories?;
    if (≤5 categories?) then (yes)
        :Bar Chart\nor Dot Plot;
    else (no)
        :Horizontal\nBar Chart;
    endif
    
case (Show distribution)
    :How many\nvariables?;
    if (1 variable?) then (yes)
        :Histogram or\nDensity Plot;
    else (no)
        :Box Plot or\nViolin Plot;
    endif
    
case (Show relationship)
    :Data types?;
    if (Both continuous?) then (yes)
        :Scatter Plot\nor Hexbin;
    else (no)
        :Heatmap or\nCorrelation Matrix;
    endif
    
case (Show change over time)
    :Number of\nseries?;
    if (1-3 series?) then (yes)
        :Line Chart;
    else (no)
        :Small Multiples\nor Faceted;
    endif
    
case (Show composition)
    :Part-to-whole?;
    if (Yes, proportions?) then (yes)
        :Stacked Bar\nor Treemap;
    else (no)
        :Grouped Bar;
    endif
    
case (Show spatial)
    :Choropleth or\nPoint Map;
endswitch

:Apply accessibility\nchecks;
note right
  - Colourblind-safe palette
  - Sufficient contrast
  - Text alternatives
end note

:Export for\npublication;

stop

@enduml
