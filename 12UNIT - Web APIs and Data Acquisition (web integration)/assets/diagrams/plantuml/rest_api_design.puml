@startuml rest_api_design
!theme plain
skinparam backgroundColor #FEFEFE

title REST API Resource Design

package "Research Data API" {
    
    class "/api/publications" as pubs <<Collection>> {
        GET : List all publications
        POST : Create new publication
        --
        Filters: year, author, keyword
        Pagination: cursor, limit
    }
    
    class "/api/publications/{id}" as pub <<Resource>> {
        GET : Get single publication
        PUT : Update publication
        DELETE : Remove publication
    }
    
    class "/api/publications/{id}/citations" as cites <<Sub-Collection>> {
        GET : List citing publications
    }
    
    class "/api/publications/{id}/authors" as authors <<Sub-Collection>> {
        GET : List authors
    }
    
    class "/api/authors" as authcoll <<Collection>> {
        GET : List all authors
        POST : Create author
    }
    
    class "/api/authors/{id}" as auth <<Resource>> {
        GET : Get author details
        PUT : Update author
    }
    
    class "/api/authors/{id}/works" as works <<Sub-Collection>> {
        GET : List author's works
    }
}

pubs --> pub : /{id}
pub --> cites : /citations
pub --> authors : /authors

authcoll --> auth : /{id}
auth --> works : /works

note bottom of pubs
  **HTTP Methods Map to Operations**
  GET = Read (Safe, Idempotent)
  POST = Create (Not Idempotent)
  PUT = Update (Idempotent)
  DELETE = Remove (Idempotent)
end note

@enduml
