@startuml text_preprocessing_stages
!theme plain
skinparam backgroundColor #1a1a2e
skinparam defaultFontColor #eaeaea
skinparam ArrowColor #4a9eff

title Text Preprocessing Stages

skinparam sequence {
  ArrowColor #4a9eff
  LifeLineBorderColor #4a9eff
  ParticipantBackgroundColor #2d2d44
  ParticipantBorderColor #4a9eff
}

participant "Raw Text" as raw
participant "Tokeniser" as tok
participant "Normaliser" as norm
participant "Filter" as filt
participant "Features" as feat

raw -> tok: "The CAT sat..."
tok -> tok: segment
tok -> norm: ["The", "CAT", "sat", "..."]
norm -> norm: lowercase
norm -> filt: ["the", "cat", "sat"]
filt -> filt: remove stopwords
filt -> feat: ["cat", "sat"]
feat -> feat: count/tfidf
feat --> raw: {cat: 1, sat: 1}

@enduml
