@startuml nlp_pipeline
!theme plain
skinparam backgroundColor #1a1a2e
skinparam defaultFontColor #eaeaea
skinparam ArrowColor #4a9eff
skinparam ComponentBackgroundColor #2d2d44
skinparam ComponentBorderColor #4a9eff

title NLP Preprocessing Pipeline

package "Input" {
  [Raw Text] as input
}

package "Preprocessing" {
  [Tokenisation] as tok
  [Case Normalisation] as case
  [Stopword Removal] as stop
  [Stemming/Lemmatisation] as norm
}

package "Feature Extraction" {
  [Bag of Words] as bow
  [N-grams] as ngram
  [TF-IDF] as tfidf
}

package "Output" {
  [Feature Vectors] as output
}

input --> tok
tok --> case
case --> stop
stop --> norm

norm --> bow
norm --> ngram
norm --> tfidf

bow --> output
ngram --> output
tfidf --> output

@enduml
